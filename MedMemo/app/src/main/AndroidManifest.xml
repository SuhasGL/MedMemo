                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <meta-data
            android:name="com.android.tools.ir.debug.disable"
            android:value="true" />

        <activity
            android:name=".home"
            android:exported="true">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".activity_signup"
